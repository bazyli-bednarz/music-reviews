{#
Album table template.
    Parameters:
    - pagination - album pagination

#}

{% if pagination is defined and pagination.items|length %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'album.id') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'album.title') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.description'|trans, 'album.description') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.year'|trans, 'album.year') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.mark'|trans, 'album.mark') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'category.title') }}</th>
            <th>{{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for album in pagination.items %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.title }}</td>
                <td>{{ album.description }}</td>
                <td>{{ album.year }}</td>
                <td>{{ album.mark }}</td>
                <td><a href="{{ url('category_show', {id: album.category.id}) }}">{{ album.category.title }}</a></td>
                <td><a href="{{ url('album_show', {id: album.id}) }}">{{ 'action.view'|trans }}</a> | <a href="{{ url('album_edit', {id: album.id}) }}">{{ 'action.edit'|trans }}</a> | <a href="{{ url('album_delete', {id: album.id}) }}">{{ 'action.delete'|trans }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>

{% else %}
    <p>{{ 'message.empty_list'|trans }}</p>
{% endif %}