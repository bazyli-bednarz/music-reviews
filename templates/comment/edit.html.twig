{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.edit_comment'|trans }} | {{ album.title }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.edit_comment'|trans }} | {{ album.title }}</h1>
    {{ form_start(form) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'message.form_error'|trans,
        }%}
    {% endif %}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.edit'|trans }}" class="btn btn-primary"/>
    </div>

    <div class="form-group row float-sm-left">
        <a href="{{ url('album_show', {slug: album.slug }) }}" class="btn btn-link">
            {{ 'action.back_to_album'|trans }}
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}