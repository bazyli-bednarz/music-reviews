{% extends 'base.html.twig' %}

{% block title %}
    Album review
{% endblock %}

{% block body %}
    {% if album is defined and album|length %}
        <h1>{{ album.title }} ({{ album.year }}) review</h1>
        <p>{{ 'label.mark'|trans }} {{ album.mark }}</p>
        <p>{{ album.description }}</p>
    {% else %}
        <p>{{ 'message.album_not_found'|trans }}</p>
    {% endif %}
{% endblock %}


