{% extends 'base.html.twig' %}
{% block title %}
{% endblock %}

{% block body %}
    {% if albums is defined and albums|length %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{{ 'label.id'|trans }}</th>
                    <th>{{ 'label.title'|trans }}</th>
                    <th>{{ 'label.description'|trans }}</th>
                    <th>{{ 'label.year'|trans }}</th>
                    <th>{{ 'label.mark'|trans }}</th>
                    <th>{{ 'label.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for album in albums %}
                <tr>
                    <td>{{ album.id }}</td>
                    <td>{{ album.title }}</td>
                    <td>{{ album.description }}</td>
                    <td>{{ album.year }}</td>
                    <td>{{ album.mark }}</td>
                    <td><a href="{{ url('album_show', {id: album.id}) }}">{{ 'action.view'|trans }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ 'message.empty_list'|trans }}</p>
    {% endif %}
{% endblock %}