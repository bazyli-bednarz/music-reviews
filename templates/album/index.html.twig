{% extends 'base.html.twig' %}
{% block title %}
{% endblock %}

{% block body %}
    {% if albums is defined and albums|length %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Year</th>
                    <th>Mark</th>
                </tr>
            </thead>
            <tbody>
            {% for album in albums %}
                <tr>
                    <td>{{ album.id }}</td>
                    <td>{{ album.title }}</td>
                    <td>{{ album.description }}</td>
                    <td>{{ album.year }}</td>
                    <td>{{ album.mark }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No albums were found.</p>
    {% endif %}
{% endblock %}